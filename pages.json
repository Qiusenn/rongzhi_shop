{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/center/center",
			"style": {
				"navigationBarTitleText": "个人"
			}
		}, {
			"path": "pages/goods/goods",
			"style": {
				"navigationBarTitleText": "商品",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/car/car",
			"style": {
				"navigationBarTitleText": "购物车",
				"enablePullDownRefresh": false
			}

		},
		{
			"path": "pages/auth/login",
			"style": {
				"navigationBarTitleText": "登录",
				"enablePullDownRefresh": false
			}
		}
	    ,{
            "path" : "pages/auth/register",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "注册",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/center/baseInfo",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "个人信息",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/goods/show",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uView",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#2c2c2c",
		"selectedColor": "#d81e06",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "static/images/home.png",
				"selectedIconPath": "static/images/home-select.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/goods/goods",
				"iconPath": "static/images/goods.png",
				"selectedIconPath": "static/images/goods-select.png",
				"text": "商品"
			},
			{
				"pagePath": "pages/car/car",
				"iconPath": "static/images/car.png",
				"selectedIconPath": "static/images/car-select.png",
				"text": "购物车"
			},
			{
				"pagePath": "pages/center/center",
				"iconPath": "static/images/mine.png",
				"selectedIconPath": "static/images/mine-select.png",
				"text": "我"
			}
		]
	}
}
